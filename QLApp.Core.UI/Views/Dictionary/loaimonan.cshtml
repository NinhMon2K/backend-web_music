@using QLApp.Core.Entities
@using QLApp.Core.Entities.Constant
@using QLApp.UILibrary.Helper

@{
    Layout = "_Layout";

}
<link href="~/css/view/dictionary/loaimonan.css" rel="stylesheet" />


<div class="top-content" id="tbMoman">
    <div class="header__search__bar bl">
        <div class="header__search__bar__icon">
            <i class="ti-filter"></i>
        </div>
        <div class="header__search__bar__input">
            <input type="text" placeholder="Điều kiện lọc">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="header__search__bar search">
        <div class="header__search__bar__icon">
            <i class="fas fa-search"></i>
        </div>
        <div class="header__search__bar__input search">
            <input id="txt_search" type="text" placeholder="Tìm kiếm">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="container-button">

        <div class="btn-right">
            <button class="btn btn_add" id="btn_add">Add</button>
        </div>
        
    </div>
</div>


<div class="container_type_dish">
    <div class="container_list_product_type-dish">
       
    </div>
</div>

<div id="dialog-form" title="Loại món ăn">
    <form class="form" id="form-1" action="" method="POST">

        <div class="page-content">
            <div class="page_row page_row-2">

                <div class="cpn_centent">

                    <div class="cpn_centent_text">
                        <div class="box box_name">
                            <div class="box_left">
                                <label for="name">Tên loại:</label>
                            </div>
                            <div class="box_right form-group">
                                <input type="text" name="name_type_desh" id="name_type_desh" class="text ui-widget-content ui-corner-all form-control">
                                <span class="form-message"></span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="right-content">
                    <div class="import-content">
                        <label for="img_type_desh">

                            <div for="img_type_desh" class="drag-container">


                                <div class="ic-plus">

                                    <i for="img_type_desh" class="ti-plus"></i>
                                </div>

                                <div class="display-text">
                                    Chọn ảnh
                                </div>

                                <input class="drag-box"
                                       id="img_type_desh"
                                       type="file"
                                       title="Chọn ảnh" style="display: none; visibility: none;" />
                                <img id="blah" class="img-back" />

                            </div>

                        </label>
                        <div class="result-upload"></div>

                    </div>

                </div>
            </div>
        </div>
        <div class="page-footer">
            <div class="footer-content" style="display:flex">
                <div class="left-footer btn_left">
                    <button type="button" id="btn_close" class="btn">Đóng</button>
                </div>
                <div class="right-footer">
                    <button type="button" class="btn form-submit" id="btn_luu">Lưu</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/view/dictionnary/loaimonan.js"></script>