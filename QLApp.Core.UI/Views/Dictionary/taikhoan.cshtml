
@using QLApp.Core.Entities
@using QLApp.Core.Entities.Constant
@using QLApp.UILibrary.Helper

@{
    Layout = "_Layout";

}
<link href="~/css/view/dictionary/taikhoan.css" rel="stylesheet" />

<div class="top-content" id="tbTaiKhoan">
    <div class="header__search__bar bl">
        <div class="header__search__bar__icon">
            <i class="ti-filter"></i>
        </div>
        <div class="header__search__bar__input">
            <input type="text" placeholder="Điều kiện lọc">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="header__search__bar search">
        <div class="header__search__bar__icon">
            <i class="fas fa-search"></i>
        </div>
        <div class="header__search__bar__input search">
            <input type="text" id="txt_search" placeholder="Tìm kiếm">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="container-button">
        <div class="btn-left">
            <button class="btn btn_delete" disabled>Delete</button>
        </div>
        <div class="btn-right">
            <button class="btn btn_add" id="btn_add">Add</button>
        </div>
    </div>
</div>
<div class="container-table">
    <table id="table_id"
           class="display"
            data-toolbar="#tbTaiKhoan"
           data-url="@Url.AppAction(MicroService.Core,"LoadALLTaiKhoan","Dictionary")"
           data-pagination="true"
            data-search-selector="#txt_search"
           data-scrollTo="true"
           data-page-size="2"
           data-load-dictionary="true"
           data-side-pagination="server">
        <thead>
            <tr data-field="id" data-id="id">
                <th class="text-center ck_All"
                    data-searchable="false"
                    data-checkbox="true"
                    data-field="">
                </th>
                <th class="stt"
                    data-searchable="false"
                    data-field="stt">STT </th>

                <th class="name_tk"
                    data-align="center"
                   
                    data-field="tentaikhoan">Tài khoản</th>
                <th class="mat_khau"
                    data-field="matkhau"
                    data-searchable="false"
                    data-formatter="taikhoano.onFormatPassword"
                    data-align="center">Mật khẩu</th>
                <th class="email_tk"
                   
                    data-field="email">Email</th>
                <th class="cachlam-ma"
                    data-field="sdt"
                    
                    data-align="right"
                    data-width="100">Số điện thoại</th>
                <th class="noiban-ma"
                   
                    data-field="quyen"
                    data-formatter="taikhoano.onFormatDecentralization"
                    data-align="center">Quyền</th>

                <th class="btn_sua" data-formatter="taikhoano.onFormatUpdate" data-align="center"> </th>
                <th class="btn_xoa" data-formatter="taikhoano.onFormatDelete">  </th>
            </tr>
        </thead>

    </table>
</div>

<div id="dialog-form" title="Tài khoản">
     
    <form class="form" id="form-1" action=""  data-auto-screen="true" method="POST">

        <div class="page-content">
            <div class="page_row page_row-1">
                <div class="box box_taikhoan">
                    <div class="box_left">
                        <label for="name">Tên tài khoản:</label>
                    </div>
                    <div class="box_right form-group">
                        <input type="text" name="taikhoan" id="taikhoan" class="text ui-widget-content ui-corner-all form-control">
                        <span class="form-message"></span>
                    </div>
                </div>


                <div class="box">
                    <div class="box_left">
                        <label for="email">Mật khẩu:</label>

                    </div>
                    <div class="box_right form-group">
                        <input type="password" name="password_tk" id="password_tk" class="text ui-widget-content ui-corner-all form-control">
                        <div class="child-password">
                            <i class="ti-eye"></i>
                        </div>
                        <span class="form-message"></span>
                    </div>
                </div>

                <div class="box box_noiban_ma">
                    <div class="box_left">
                        <label for="password">Phân quyền:</label>

                    </div>
                    <div class="box_right form-group">
                        <select id="lt_type_dish_filter" placeholder="Select size..." style="width: 100%;">
                            <option value="1">Admin</option>
                            <option value="2">Người dùng</option>
                        </select>

                        <span class="form-message"></span>
                    </div>
                </div>
            </div>


            <div class="page_row page_row-2" data-step="2" style="display:none;">
                <div class="cpn_centent">

                    <div class="cpn_centent_text">
                        <div class="box box_ht">
                            <div class="box_left">
                                <label for="password">Họ tên:</label>
                            </div>
                            <div class="box_right form-group">
                                <input type="text" name="fullname" id="fullname" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>

                        <div class="box box_ht">
                            <div class="box_left">
                                <label for="password">Giới tính:</label>

                            </div>
                            <div class="box_right box_gt ">
                                <div class="gt gt_nam">
                                    <input type="radio" id="rdonam" name="sex" value="1">
                                    <label>Nam</label>
                                </div>
                                <div class="gt gt_nu">
                                    <input type="radio" id="rdonu" name="sex" value="0">
                                    <label>Nữ</label>
                                </div>

                            </div>
                        </div>

                        <div class="box box_sdt">
                            <div class="box_left">

                                <label for="name">Số điện thoại:</label>

                            </div>
                            <div class="box_right form-group">
                                <input type="text" name="" id="sdt" class="text ui-widget-content ui-corner-all">
                            </div>
                        </div>

                        <div class="box box_ht ">
                            <div class="box_left">
                                <label>Ngày sinh:</label>
                            </div>
                            <div class="box_right form-group">
                                <input type="date"
                                       id="ngaysinh" 
                                       name="date"
                                       data-field="ngaysinh"
                              
                               data-has-data="true"
                               data-control-type="Date"
                               data-type="Date"
                               placeholder="__/__/____"
                            
                                       >
                                <span class="form-message"></span>
                            </div>
                        </div>
                        <div class="box box_email">
                            <div class="box_left">

                                <label for="name">Email:</label>

                            </div>
                            <div class="box_right form-group">
                                <input type="text" name="email" id="email" class="text ui-widget-content ui-corner-all">
                                <span class="form-message"></span>
                            </div>
                        </div>

                    </div>
                    <div class="right-content">
                        <div class="import-content">
                            <label for="hinhanh_tk">

                                <div for="hinhanh_tk" class="drag-container">


                                    <div class="ic-plus">

                                        <i for="hinhanh_tk" class="ti-plus"></i>
                                    </div>

                                    <div class="display-text">
                                        Chọn ảnh
                                    </div>

                                    <input class="drag-box"
                                           id="hinhanh_tk"
                                           type="file"
                                           title="Chọn ảnh" style="display: none; visibility: none;" />
                                    <img id="blah" class="img-back" />

                                </div>

                            </label>
                            <div class="result-upload"></div>

                        </div>

                    </div>



                </div>
               





            </div>

        </div>
        <div class="page-footer">


            <div class="footer-content" style="display:flex">
                <div class="left-footer btn_left">
                    <button type="button" id="btn_close" class="btn">Đóng</button>
                    <button type="button" id="btn_trove" style="display: none;" class="btn">Trở về</button>
                </div>
                <div class="right-footer">
                    <button type="button" class="btn" id="btn_tieptheo">Tiếp theo</button>
                    <button type="button" class="btn form-submit" style="display: none;" id="btn_luu">Lưu</button>
                </div>
            </div>
        </div>
    </form>
</div>



<script src="~/js/view/dictionnary/taikhoan.js"></script>